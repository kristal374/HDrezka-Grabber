{
    "name": "HDrezka Grabber",
    "description": "Extract video current web page",
    "version": "0.1",
    "manifest_version": 3,
    "icons": {
        "48": "icons/48.png",
        "32": "icons/32.png",
        "16": "icons/16.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
      ],
    "web_accessible_resources": [
        {
            "resources": [
                "injection_scripts/video_info.js",
                "injection_scripts/update_translate_info.js",
                "injection_scripts/loader.js",
                "injection_scripts/Blob.js"
                
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}
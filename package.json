    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/webextension-polyfill": "^0.12.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "rollup-plugin-copy": "^3.5.0",
    "tailwindcss": "4.1.12",
    "webextension-polyfill": "^0.12.0",
    "yargs": "^17.7.2",
    "zip-local": "^0.3.5"

    "@reduxjs/toolkit": "^2.2.5",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-typescript": "^12.1.4",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "async-mutex": "^0.5.0",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.0",
    "idb": "^8.0.3",
    "lucide-react": "^0.438.0",
    "mitt": "^3.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-error-boundary": "^5.0.0",
    "react-icons": "^5.5.0",
    "react-redux": "^9.1.2",
    "tailwind-merge": "3.3.1",

{
  "name": "hdrezka-grabber",
  "version": "1.0.0 alpha",
  "type": "module",
  "scripts": {
    "build:popup": "vite -c vite.config.ts build ./src/html/ --outDir ../../dist/build/HDrezka-Grabber.build --logLevel error",
    "build:background": "rollup -c rollup.config.js ",
    "build": "npm run build:popup && npm run build:background",
    "build:chromium": "node run-build.js -b chromium",
    "build:firefox": "node run-build.js -b firefox",
    "build:dev": "node run-build.js -b all -s false",
    "build:prod": "node run-build.js -b all -p",
    "format": "prettier --write --cache . --log-level silent"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-popover": "^1.1.1",
    "@radix-ui/react-select": "^2.1.1",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-typescript": "^11.1.6",
    "@reduxjs/toolkit": "^2.2.5",
    "react-redux": "^9.1.2",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.0",
    "lucide-react": "^0.438.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-error-boundary": "^5.0.0",
    "typescript": "^5.3.3",
    "use-storage-state": "^5.0.0",
    "vite": "^5.1.2"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/webextension-polyfill": "^0.12.0",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "rollup-plugin-copy": "^3.5.0",
    "tailwindcss": "^3.4.17",
    "webextension-polyfill": "^0.12.0",
    "yargs": "^17.7.2",
    "zip-local": "^0.3.5"
  }
}

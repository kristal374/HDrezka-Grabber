{
  "name": "hdrezka-grabber",
  "version": "1.0.0 alpha",
  "type": "module",
  "scripts": {
    "build:popup": "vite -c vite.config.ts build ./src/html/ --outDir ../../dist/build/HDrezka-Grabber.build --logLevel error",
    "build:background": "rollup -c rollup.config.js ",
    "build": "npm run build:popup & npm run build:background",
    "build:chromium": "node run-build.js -b chromium",
    "build:firefox": "node run-build.js -b firefox",
    "build:dev": "node run-build.js -b all -s false",
    "build:prod": "node run-build.js -b all -p",
    "format": "prettier --write --cache .",
    "settings:dev": "vite -c vite.config.dev.ts"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.1.1",
